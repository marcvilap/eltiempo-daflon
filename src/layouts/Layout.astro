---
import '../main.css'
import { ViewTransitions } from 'astro:transitions'
import NavElTiempo from '$components/NavElTiempo.astro'

const metaTitle = 'Bienestar a un solo paso. Prepárate para las vacaciones caminando al aire libre'
const metaDescription = 'La mochila a punto, las rutas ya están seleccionadas, botas nuevas, equipación de primera… el momento que llevas esperando todo el año ya está a la vuelta de la esquina.'
const metaUrl = 'https://www.eltiempo.es/bc/bienestaracadapaso/'
---

<!doctype html>
<html lang="es-ES">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="robots" content="noindex,nofollow" />
		<title>{metaTitle}</title>
		<meta property="description" content={metaDescription} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={metaUrl} />
		<meta property="og:image" content={`${metaUrl}thumbnail.jpg`} />
		<meta property="og:title" content={metaTitle} />
		<meta property="og:description" content={metaDescription} />
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:image" content={`${metaUrl}thumbnail.jpg`} />
		<meta property="twitter:title" content={metaTitle} />
		<meta property="twitter:description" content={metaDescription} />
		<link rel="icon" href="/favicon.png" />
		<ViewTransitions />
	</head>
	<body>
		<NavElTiempo />
		<slot />
		<script src="../main.ts"></script>
	</body>
</html>
